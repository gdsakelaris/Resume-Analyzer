# Starscreen Resume Analyzer - Environment Configuration

# ============================================================================
# API Settings
# ============================================================================
PROJECT_NAME=Starscreen Resume Analyzer
API_V1_STR=/api/v1

# ============================================================================
# Database Configuration
# ============================================================================
POSTGRES_USER=starscreen_user
POSTGRES_PASSWORD=Ilikecode1!
POSTGRES_SERVER=db
POSTGRES_PORT=5432
POSTGRES_DB=starscreen_db

# ============================================================================
# Redis Configuration
# ============================================================================
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0

# ============================================================================
# OpenAI API Configuration
# ============================================================================
OPENAI_API_KEY=sk-YOUR_OPENAI_API_KEY_HERE
OPENAI_MODEL=gpt-4o
OPENAI_TEMPERATURE=0.2

# ============================================================================
# JWT Authentication
# ============================================================================
# Generate SECRET_KEY with: openssl rand -hex 32
SECRET_KEY=CHANGE_THIS_TO_RANDOM_64_CHAR_SECRET_KEY
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# ============================================================================
# Stripe Payment Configuration
# ============================================================================
STRIPE_API_KEY=sk_test_YOUR_STRIPE_KEY
STRIPE_WEBHOOK_SECRET=whsec_YOUR_WEBHOOK_SECRET

# Stripe Price IDs for subscription plans
STRIPE_PRICE_ID_STARTER=price_YOUR_STARTER_PRICE_ID
STRIPE_PRICE_ID_SMALL_BUSINESS=price_YOUR_SMALL_BIZ_PRICE_ID
STRIPE_PRICE_ID_PROFESSIONAL=price_YOUR_PROF_PRICE_ID
STRIPE_PRICE_ID_ENTERPRISE_BASE=price_YOUR_ENTERPRISE_BASE_PRICE_ID

# ============================================================================
# AWS S3 File Storage Configuration
# ============================================================================
# Set USE_S3=true for production (requires S3 bucket setup)
# Set USE_S3=false for local development (uses uploads/ directory)
USE_S3=false

# AWS Credentials (leave empty if using IAM roles on EC2)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=

# AWS Region and S3 Bucket
AWS_REGION=us-east-1
S3_BUCKET_NAME=starscreen-resumes-prod

# ============================================================================
# Subscription Limits
# ============================================================================
FREE_TIER_CANDIDATE_LIMIT=10

# ============================================================================
# CORS Settings (for frontend integration)
# ============================================================================
# Comma-separated list or JSON array
BACKEND_CORS_ORIGINS=["http://localhost:3000","http://localhost:8000"]

# ============================================================================
# Deployment Notes
# ============================================================================
#
# Local Development:
#   - USE_S3=false (files stored in uploads/ directory)
#   - Use docker-compose up -d to start services
#
# Production (EC2 with IAM Roles):
#   - USE_S3=true
#   - AWS_ACCESS_KEY_ID and AWS_SECRET_ACCESS_KEY should be empty
#   - EC2 IAM role provides credentials automatically
#
# Production (Without IAM Roles):
#   - USE_S3=true
#   - Set AWS_ACCESS_KEY_ID and AWS_SECRET_ACCESS_KEY from IAM user
#
# ============================================================================
